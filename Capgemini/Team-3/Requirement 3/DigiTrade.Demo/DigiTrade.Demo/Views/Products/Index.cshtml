@{
    ViewBag.Title="Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h2 id="rr">Product List</h2>
<table id="tblpr"class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID </th>
            <th>Product Title</th>
             <th>Description</th>
            <th>Sale Price</th> 
            <th>Current Stock</th>

        </tr>

    </thead>
    <tbody></tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<button onclick="GetProducts()" class="btn btn-primary">get Products</button>


<script type="text/javascript">
    $(document).ready(function()
    {});

    function GetProducts(){
    $.getJSON("/Products/GetProducts",function(product1){
    $("tblpr tbody tr").remove();
    $.map(product1,function(product){

    $("#tblpr tbody").append("<tr>"
    +"<td>" + product.id +"</td>"
    +"<td>" + product.productTitle +"</td>"
    +"<td>" + product.discription +"</td>"
    +"<td>" + product.salePrice +"</td>"
    +"<td>" + product.curStock +"</td>"
    +"<td>"+"<button class='btn-success' onclick='Details("+product.id+")'style='margin-right:5px;'>Details</button> "+"</td>"
    +"</tr>");
    });
    });

    }
    </script>