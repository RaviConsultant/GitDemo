@using System.Data
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>

    <h4>Product</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayName("Product Title")
        </dt>
        <dd class = "col-sm-10">
           @ViewData["ProductTitle"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Product Description")
        </dt>
        <dd class = "col-sm-10">
           @ViewData["ProductDescription"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Sale Price(Rs)")
        </dt>
        <dd class = "col-sm-10">
           @ViewData["SalePrice"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Current Stock")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["CurrentStock"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Brand")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["BrandId"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Processor")
        </dt>
        <dd class = "col-sm-10">
           @ViewData["Processor"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("RAM(GB)")
        </dt>
        <dd class = "col-sm-10">
           @ViewData["RAM"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("ROM(GB)")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["ROM"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Primary Camera(MP)")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["PrimaryCamera"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Front Camera(MP)")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["FrontCamera"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Battery(mAH)")
        </dt>
        <dd class = "col-sm-10">
            @ViewData["Battery"]
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
