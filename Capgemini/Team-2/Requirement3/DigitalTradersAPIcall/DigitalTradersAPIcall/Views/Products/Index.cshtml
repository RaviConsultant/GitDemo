@using System.Data
@model DataTable

@{
    ViewBag.Title= "Product";

}


<table  class=" table table-sm table-stripped table-bordered m-2" >
    <thead>
        <tr>
            <th>@Html.DisplayName("Product Id")</th>
            <th>@Html.DisplayName("Product Title")</th>
            <th>@Html.DisplayName("Product Description")</th>
            <th>@Html.DisplayName("Sale Price")</th>
            <th>@Html.DisplayName("Current Stock")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["Id"]</td>
                <td>@row["ProductTitle"]</td>
                <td>@row["ProductDescription"]</td>
                <td>@row["SalePrice"]</td>
                <td>@row["CurrentStock"]</td>
                <td><a asp-action="Details"  asp-action="Details">Details</a></td>
              @* <td><a class="detl-btn" href= "~\Views\Products\ProdDetail.cshtml">
                   <button  style="background-color: #1c87c9;border: none; color: white;">Detail</button>
               </a>    
               </td> *@
               
            </tr>
        }
    </tbody>

</table>

 