@model IEnumerable<DigiTradeASP.NETWEBAPP.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Battery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Primary_cam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Front_cam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Current_Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Battery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Primary_cam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Front_cam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Current_Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sales_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName.BrandName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Prod_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Prod_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Prod_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
